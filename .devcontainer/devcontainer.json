{
  "name": "weko-group-cache-db Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "remoteUser": "vscode",

  "initializeCommand": "docker network create weko-group-cache-db_default || true",
  "runArgs": [
    "--network",
    "weko-group-cache-db_default"
  ],

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.14"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "dockerDashComposeVersion": "latest",
      "enableNonRootDocker": true,
      "moby": false
    }
  },
  "remoteEnv": {
    "VIRTUAL_ENV": "/home/vscode/.venv",
    "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv"
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "onCreateCommand": "/bin/sh .devcontainer/setup.sh install_deps",
  "postAttachCommand": "/bin/sh .devcontainer/setup.sh compose_up",

  "customizations": {
    "vscode": {
      "settings": {
        "python.languageServer": "Pylance",
        "python.defaultInterpreterPath": "~/.venv/bin/python",
        "[python]": {
          "editor.rulers": [88],
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "python.useEnvironmentsExtension": false,
        "python.terminal.activateEnvironment": false
      },
      "extensions": [
        "visualstudioexptteam.vscodeintellicode",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",

        "charliermarsh.ruff",
        "editorconfig.editorconfig",

        "mhutchie.git-graph",
        "eamodio.gitlens"
      ]
    }
  }
}
